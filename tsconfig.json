{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "paths": {
    "@/*": ["src/*"],
    "@/data": ["src/data/*"],
    "@/utils": ["src/utils/*"],
    "@/commands": ["src/commands/*"]
  }
}
